<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="top"
    android:layout_marginTop="10dp"
    android:background="@drawable/rounded_button"
    android:backgroundTint="@null"
    android:padding="6dp">

    <TextView
        android:id="@+id/vacationName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="Vacation Name"
        android:textColor="@color/white"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/hotel"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="Hotel"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/vacationName" />

    <TextView
        android:id="@+id/startDate"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="Start Date"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/hotel" />

    <TextView
        android:id="@+id/endDate"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="End Date"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/startDate" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fabEditVacation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_button"
        android:clickable="true"
        android:contentDescription="Edit"
        app:backgroundTint="@color/black"
        app:fabCustomSize="48dp"
        app:fabSize="normal"
        app:layout_constraintBottom_toBottomOf="@+id/fabShareVacation"
        app:layout_constraintEnd_toStartOf="@+id/fabShareVacation"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/fabShareVacation"
        app:layout_constraintVertical_bias="0.0"
        app:rippleColor="@color/lime"
        app:shapeAppearance="@style/Widget.MaterialComponents.FloatingActionButton"
        app:srcCompat="@drawable/outline_edit_24"
        app:tint="@color/lime" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fabDeleteVacation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:contentDescription="Delete"
        app:backgroundTint="@color/black"
        app:fabCustomSize="48dp"
        app:fabSize="normal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:rippleColor="@color/lime"
        app:shapeAppearance="@style/Widget.MaterialComponents.FloatingActionButton"
        app:srcCompat="@drawable/outline_delete_24"
        app:tint="@color/lime" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fabAlertVacation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:contentDescription="Alert"
        app:backgroundTint="@color/black"
        app:fabCustomSize="48dp"
        app:fabSize="normal"
        app:layout_constraintBottom_toBottomOf="@+id/fabDeleteVacation"
        app:layout_constraintEnd_toStartOf="@+id/fabDeleteVacation"
        app:layout_constraintTop_toTopOf="@+id/fabDeleteVacation"
        app:rippleColor="@color/lime"
        app:shapeAppearance="@style/Widget.MaterialComponents.FloatingActionButton"
        app:srcCompat="@drawable/outline_alert_24"
        app:tint="@color/lime" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fabShareVacation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:contentDescription="Share"
        app:backgroundTint="@color/black"
        app:fabCustomSize="48dp"
        app:fabSize="normal"
        app:layout_constraintBottom_toBottomOf="@+id/fabAlertVacation"
        app:layout_constraintEnd_toStartOf="@+id/fabAlertVacation"
        app:layout_constraintTop_toTopOf="@+id/fabAlertVacation"
        app:rippleColor="@color/lime"
        app:shapeAppearance="@style/Widget.MaterialComponents.FloatingActionButton"
        app:srcCompat="@drawable/outline_share_24"
        app:tint="@color/lime" />

</androidx.constraintlayout.widget.ConstraintLayout>