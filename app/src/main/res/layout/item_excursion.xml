<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:layout_gravity="top"
    android:layout_marginVertical="4dp"
    android:background="@drawable/rounded_button"
    android:padding="8dp">

    <TextView
        android:id="@+id/excursionName"
        android:layout_width="379dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:text="Excursion Name"
        android:textColor="@color/white"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/excursionStartDate"
        android:layout_width="379dp"
        android:layout_height="wrap_content"
        android:text="Start Date"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/excursionName"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/excursionName"
        app:layout_constraintTop_toBottomOf="@+id/excursionName"
        app:layout_constraintVertical_bias="0.064" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fabEditExcursion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:contentDescription="Edit"
        app:backgroundTint="@color/black"
        app:fabCustomSize="48dp"
        app:layout_constraintBottom_toBottomOf="@+id/fabAlertExcursion"
        app:layout_constraintEnd_toStartOf="@+id/fabAlertExcursion"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/fabAlertExcursion"
        app:layout_constraintVertical_bias="1.0"
        app:rippleColor="@color/lime"
        app:shapeAppearance="@style/Widget.MaterialComponents.FloatingActionButton"
        app:srcCompat="@drawable/outline_edit_24"
        app:tint="@color/lime" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fabAlertExcursion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:contentDescription="Alert"
        app:backgroundTint="@color/black"
        app:fabCustomSize="48dp"
        app:fabSize="normal"
        app:layout_constraintBottom_toBottomOf="@+id/fabDeleteExcursion"
        app:layout_constraintEnd_toStartOf="@+id/fabDeleteExcursion"
        app:layout_constraintTop_toTopOf="@+id/fabDeleteExcursion"
        app:rippleColor="@color/lime"
        app:shapeAppearance="@style/Widget.MaterialComponents.FloatingActionButton"
        app:srcCompat="@drawable/outline_alert_24"
        app:tint="@color/lime" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fabDeleteExcursion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:clickable="true"
        android:contentDescription="Delete"
        app:backgroundTint="@color/black"
        app:fabCustomSize="48dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/excursionStartDate"
        app:layout_constraintVertical_bias="1.0"
        app:rippleColor="@color/lime"
        app:shapeAppearance="@style/Widget.MaterialComponents.FloatingActionButton"
        app:srcCompat="@drawable/outline_delete_24"
        app:tint="@color/lime" />
</androidx.constraintlayout.widget.ConstraintLayout>